# Enable web interface functionality
# Default: true
ENABLE_WEB=true
# Enable webhook functionality for external integrations
# Default: true
ENABLE_WEBHOOK=true

# Username for basic authentication
AUTH_USERNAME=admin
# Password for basic authentication
AUTH_PASSWORD=admin

# Swagger UI authentication username (references AUTH_USERNAME)
SWAGGER_USERNAME=${AUTH_USERNAME}
# Swagger UI authentication password (references AUTH_PASSWORD)
SWAGGER_PASSWORD=${AUTH_PASSWORD}

# URL endpoint where webhooks will be sent (currently empty)
# Required if ENABLE_WEBHOOK is true
WEBHOOK_URL=
# Secret key used to sign/validate webhook payloads
# Required if ENABLE_WEBHOOK is true
WEBHOOK_KEY=secret
